<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>jmecsoftware.sonarqube.fsharp</groupId>
    <artifactId>sonar-communityfsharp-analyzer</artifactId>
    <version>0.0.0.1</version>
  </parent>

  <artifactId>FsSonarRunner</artifactId>
  <packaging>pom</packaging>

  <name>Sonar F# Plugin :: FsSonarRunner</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <id>dotnet-clean</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>dotnet</executable>
              <workingDirectory>.</workingDirectory>
              <arguments>
                <argument>clean</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>dotnet-publish-win</id>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>dotnet</executable>
              <workingDirectory>.</workingDirectory>
              <arguments>
                <argument>publish</argument>
                <argument>--configuration</argument>
                <argument>${configuration}</argument>
                <argument>--output</argument>
                <argument>publish/win-x86</argument>
                <argument>--runtime </argument>
                <argument>win-x64</argument>
                <argument>FsSonarRunner</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>dotnet-publish-linux</id>
            <phase>package</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>dotnet</executable>
              <workingDirectory>.</workingDirectory>
              <arguments>
                <argument>publish</argument>
                <argument>--configuration</argument>
                <argument>${configuration}</argument>
                <argument>--output</argument>
                <argument>publish/linux-x86</argument>
                <argument>--runtime </argument>
                <argument>linux-x64</argument>
                <argument>FsSonarRunner</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>dotnet-test</id>
            <phase>test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>dotnet</executable>
              <workingDirectory>.</workingDirectory>
              <arguments>
                <argument>test</argument>
                <argument>--logger:Appveyor</argument>
                <argument>--test-adapter-path:.</argument>
                <argument>-c</argument>
                <argument>${configuration}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <descriptors>
            <descriptor>zip-assembly.xml</descriptor>
          </descriptors>
          <appendAssemblyId>false</appendAssemblyId>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>            <!-- this is used for inheritance merges -->
            <phase>package</phase>            <!-- bind to the packaging phase -->
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
