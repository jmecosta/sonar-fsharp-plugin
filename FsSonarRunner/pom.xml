<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.codehaus.sonar-plugins.dotnet.fsharp</groupId>
    <artifactId>sonar-fsharp-squid</artifactId>
    <version>1.0.RC4</version>
  </parent>

  <artifactId>FsSonarRunner</artifactId>
  <packaging>pom</packaging>

  <name>Sonar F# Plugin :: FsSonarRunner</name>


<profiles>
		<profile>
			<activation>
			  <activeByDefault>true</activeByDefault>
			  <property>
				<name>!vsBin</name>
			  </property>
			</activation>
	
			<properties>
				<vsBin>C:/Program Files (x86)/MSBuild/14.0/Bin/msbuild.exe</vsBin>            
			</properties>


     	</profile>	  	
</profiles>		
  <build>

    <plugins>

      <plugin>
  
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.3.2</version>
        <executions>
          <execution>
            <id>msbuild-clean</id>
            <phase>clean</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${vsBin}</executable>
              <workingDirectory>.</workingDirectory>
              <arguments>
                <argument>/property:Configuration=Release</argument>
                <argument>/target:clean</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>nuget-restore-packages</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${project.basedir}/nuget/nuget.exe</executable>
              <workingDirectory>.</workingDirectory>
              <arguments>
                <argument>restore</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>msbuild-build</id>
            <phase>compile</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${vsBin}</executable>
              <workingDirectory>.</workingDirectory>
              <arguments>
                <argument>/property:Configuration=Release</argument>
              </arguments>
            </configuration>
          </execution>

        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <descriptor>zip-assembly.xml</descriptor>
          <appendAssemblyId>false</appendAssemblyId>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
